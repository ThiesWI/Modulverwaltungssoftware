<Page x:Class="Modulverwaltungssoftware.ModulView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modulverwaltungssoftware"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800"
      Title="ModulView">

    <Grid>
        <!-- Hauptlayout: 3 Spalten (Versions-Dropdown | Modulanzeige | Aktionsbuttons) -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <!-- Linker Bereich: "Version auswählen" Dropdown-Menü -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0">
                <!-- Version auswählen als Dropdown mit Popup (gesamte Fläche klickbar) -->
                <Border x:Name="VersionsBorder" Background="#E0E0E0" CornerRadius="5">
                    <Button x:Name="VersionsButton" Click="ToggleVersionsPopup" Background="Transparent" BorderThickness="0" Padding="4" Width="113">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Version auswählen" FontWeight="Bold" VerticalAlignment="Center"/>
                            <TextBlock Text=" ▾" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
                <!-- Popup muss außerhalb des Border liegen, da Border nur ein Child zulässt -->
                <Popup x:Name="VersionsPopup"
                       PlacementTarget="{Binding ElementName=VersionsButton}"
                       Placement="Bottom"
                       StaysOpen="False"
                       AllowsTransparency="True">
                    <Border Background="White" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="0" Width="{Binding ElementName=VersionsBorder, Path=ActualWidth}">
                        <ItemsControl ItemsSource="{Binding Versions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}" Click="VersionPopupItem_Click" Background="Transparent" BorderThickness="0" Padding="8,6" HorizontalContentAlignment="Left"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Popup>
                
                <!-- ✨ STATUS-BADGE unter dem Dropdown -->
                <Border x:Name="StatusBadge" 
                        Margin="0,8,0,0" 
                        CornerRadius="4" 
                        Padding="8,6"
                        Width="113"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="StatusIcon" 
                                   FontFamily="Segoe UI Symbol" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusText" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Mittlerer Bereich: Suchleiste und Anzeige -->
            <Grid Grid.Column="0" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="SearchBox" Grid.Row="0" Height="32" Width="500" VerticalContentAlignment="Center" FontSize="14"/>

                <Border Grid.Row="1" BorderBrush="#CCCCCC" BorderThickness="1" HorizontalAlignment="Center"
          Margin="0,0,0,15" Width="{Binding ElementName=SearchBox, Path=ActualWidth}">
                    <ScrollViewer x:Name="ContentScrollViewer"
                  VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Hidden">
                        <StackPanel x:Name="FormPanel" Margin="20,0,20,0"
                  HorizontalAlignment="Stretch">
                            <!-- titel -->
                            <StackPanel Margin="0,10,0,10">
                                <TextBlock Text="Titel:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Titel des Moduls" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="TitelTextBox" Height="24" Width="440"
                   TextWrapping="Wrap"
                   HorizontalScrollBarVisibility="Disabled"
                   MaxLength="100"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- version -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Version:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Versionsnummer des Moduls" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="VersionTextBox" Height="24" Width="440"
                   TextWrapping="Wrap"
                   HorizontalScrollBarVisibility="Disabled"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- modultyp -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Modultyp:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Typ des Moduls" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <ListBox x:Name="ModultypListBox" SelectionMode="Multiple" IsEnabled="False" Background="#F5F5F5"
                                         HorizontalAlignment="Stretch">
                                    <ListBoxItem Content="Pflichtmodul"/>
                                    <ListBoxItem Content="Wahlpflichtmodul"/>
                                    <ListBoxItem Content="Wahlmodul (Freies Wahlfach)"/>
                                    <ListBoxItem Content="Spezialisierungsmodul"/>
                                    <ListBoxItem Content="Grundlagenmodul"/>
                                </ListBox>
                            </StackPanel>
                            <!-- Studiengang -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Studiengang:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Empfohlener Studiengang" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="StudiengangTextBox" Height="24" Width="440" Style="{StaticResource ReadOnlyFieldStyle}"
                                         TextWrapping="Wrap" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- semester -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Semester:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Empfohlenes Semester" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <ListBox x:Name="SemesterListBox" SelectionMode="Multiple" IsEnabled="False" Background="#F5F5F5"
                                         HorizontalAlignment="Stretch">
                                    <ListBoxItem Content="1"/>
                                    <ListBoxItem Content="2"/>
                                    <ListBoxItem Content="3"/>
                                    <ListBoxItem Content="4"/>
                                    <ListBoxItem Content="5"/>
                                    <ListBoxItem Content="6"/>
                                    <ListBoxItem Content="7"/>
                                    <ListBoxItem Content="8"/>
                                </ListBox>
                            </StackPanel>
                            <!-- pruefungsform -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Prüfungsform:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Art der Prüfung" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <ListBox x:Name="PruefungsformListBox" SelectionMode="Multiple" IsEnabled="False" Background="#F5F5F5"
                                         HorizontalAlignment="Stretch">
                                    <ListBoxItem Content="Klausur"/>
                                    <ListBoxItem Content="Mündliche Prüfung"/>
                                    <ListBoxItem Content="Hausarbeit (Seminararbeit)"/>
                                    <ListBoxItem Content="Protokoll"/>
                                    <ListBoxItem Content="Präsentation"/>
                                    <ListBoxItem Content="Projektarbeit (Belegarbeit)"/>
                                    <ListBoxItem Content="Portfolio"/>
                                    <ListBoxItem Content="Referat"/>
                                </ListBox>
                            </StackPanel>
                            <!-- turnus -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Turnus:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Angebotsrhythmus" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <ListBox x:Name="TurnusListBox" SelectionMode="Multiple" IsEnabled="False" Background="#F5F5F5"
                                         HorizontalAlignment="Stretch">
                                    <ListBoxItem Content="Jährlich (WiSe)"/>
                                    <ListBoxItem Content="Jährlich (SoSe)"/>
                                    <ListBoxItem Content="Halbjährlich (Jedes Semester)"/>
                                    <ListBoxItem Content="Zweijährlich"/>
                                    <ListBoxItem Content="Blockveranstaltung"/>
                                </ListBox>
                            </StackPanel>
                            <!-- ects -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="ECTS:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Leistungspunkte" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="EctsTextBox" Height="24" Width="440" Style="{StaticResource ReadOnlyFieldStyle}"
                                         TextWrapping="Wrap" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- workloadPraesenz -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Workload Präsenz:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Zeitaufwand in Präsenz (Stunden)" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="WorkloadPraesenzTextBox" Height="24" Width="440" Style="{StaticResource ReadOnlyFieldStyle}"
                                         TextWrapping="Wrap" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- workloadSelbststudium -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Workload Selbststudium:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Zeitaufwand im Selbststudium (Stunden)" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="WorkloadSelbststudiumTextBox" Height="24" Width="440" Style="{StaticResource ReadOnlyFieldStyle}"
                                         TextWrapping="Wrap" HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- verantwortlicher -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Verantwortlicher:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Modulverantwortliche Person" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="VerantwortlicherTextBox" Height="24" Width="440"
                   TextWrapping="Wrap"
                   HorizontalScrollBarVisibility="Disabled"
                   MaxLength="100"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- voraussetzungen -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Voraussetzungen:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Erforderliche Vorkenntnisse oder Module" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="VoraussetzungenTextBox" Width="440"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"
                   MinLines="4"
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- lernziele -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Lernziele:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Ziele, die Studierende erreichen sollen" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="LernzieleTextBox" Width="440"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"
                   MinLines="4"
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- lehrinhalte -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Lehrinhalte:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Inhalte des Moduls" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="LehrinhalteTextBox" Width="440"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"
                   MinLines="4"
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                            <!-- literatur -->
                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Text="Literatur:" Style="{StaticResource CommentFieldLabelStyle}"/>
                                <TextBlock Text="Empfohlene oder verpflichtende Literatur" Style="{StaticResource CommentFieldDescriptionStyle}"/>
                                <TextBox x:Name="LiteraturTextBox" Width="440"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"
                   MinLines="4"
                   VerticalScrollBarVisibility="Auto"
                   HorizontalScrollBarVisibility="Disabled"
                   Style="{StaticResource ReadOnlyFieldStyle}"
                   HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Rechter Bereich: "Exportieren", "Bearbeiten", "Löschen", "Kommentieren", "Einreichen" Button unten -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,15,0">
                <Button Content="Exportieren" Width="100" Height="35" Click="ModulversionExportieren_Click"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,45,15,0">
                <Button Content="Bearbeiten" Width="100" Height="35" Click="ModulversionBearbeiten_Click"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,80,15,0">
                <Button Content="Löschen" Width="100" Height="35" Click="ModulversionLöschen_Click"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,130,15,0">
                <Button Content="Kommentieren" Width="100" Height="35" Click="ModulversionKommentieren_Click"/>
            </StackPanel>
            <StackPanel Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,165,15,0">
                <Button x:Name="EinreichenButton" Content="Einreichen" Width="100" Height="35" Click="ModulversionEinreichen_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
