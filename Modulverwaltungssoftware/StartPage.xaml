<Page x:Class="Modulverwaltungssoftware.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Modulverwaltungssoftware"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <!-- UNTERER Bereich für Unterseiten -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <!-- Linker Bereich: "Neues Modul" Button -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0">
                <Button Content="Neues Modul" Width="100" Height="35" Margin="0,0,0,10" Click="NeuesModulButton_Click"/>
            </StackPanel>

            <!-- Mittlerer Bereich: Suchleiste und Anzeige -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="20,0,20,0">
                <TextBox x:Name="SearchBox" Height="32" Margin="0,0,0,0" VerticalContentAlignment="Center" FontSize="14" ToolTip="Suche" ContentElement.GiveFeedback="SearchBox_GiveFeedback"/>
                <ScrollViewer Height="270" VerticalScrollBarVisibility="Visible">
                    <ItemsControl x:Name="ModulePreviewList" ItemsSource="{Binding ModulePreviews}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Click="ModulePreview_Click" Padding="8" Margin="0,6,0,0" Background="Transparent" BorderThickness="1" BorderBrush="#DDD" HorizontalContentAlignment="Left">
                                    <StackPanel>
                                        <!-- Block 1: Titel -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,4">
                                            <TextBlock Text="Titel: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Title}" Margin="6,0,0,0" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <!-- Block 2: Studiengang -->
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,4">
                                            <TextBlock Text="Studiengang: " FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Studiengang}" Margin="6,0,0,0" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <!-- Platz für Inhaltsvorschau (variabel einfügbar) -->
                                        <TextBlock Text="{Binding ContentPreview}" TextWrapping="Wrap" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- Rechter Bereich: "Öffnen" Button unten -->
            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,10">
                <Button Content="Öffnen" Width="100" Height="35" Click="OeffnenButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
