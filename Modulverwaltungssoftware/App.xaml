<Application x:Class="Modulverwaltungssoftware.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Modulverwaltungssoftware"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <!-- Globaler Button-Stil -->
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- CommentView Styles -->
        <Style x:Key="CommentFieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="CommentFieldDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style x:Key="ReadOnlyFieldStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
    </Application.Resources>
</Application>
