<Window x:Class="Modulverwaltungssoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modulverwaltungssoftware"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- 1/5 -->
            <RowDefinition Height="4*" />
            <!-- 4/5 -->
        </Grid.RowDefinitions>

        <!-- OBERER Bereich -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>

                <!-- Logo links oben -->
                <Button Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="220" Height="70" Background="Transparent" BorderThickness="0"
                Click="LogoButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="logo.png" Height="70" Width="70" Margin="0,0,8,0"/>
                        <TextBlock Text="Modulverwaltung" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Logo links oben -->

                <!-- Rechte Seite: Notifications, Userinfo, Meine Projekte -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Notification Icon -->
                        <Button Width="32" Height="32" Margin="0,0,10,0" ToolTip="Benachrichtigungen">
                            <Image Source="notification.png" Width="20" Height="20"/>
                        </Button>
                        <!-- Userinfo -->
                        <TextBlock Text="User: P. Brandenburg &#x0A;Rolle: Modulersteller" 
                           VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </StackPanel>
                    <!-- Meine Projekte -->
                    <Border Background="#E0E0E0" CornerRadius="5" Padding="5" Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock Text="Meine Projekte" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- UNTERER Bereich für Unterseiten -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <!-- Linker Bereich: "Neues Modul" Button -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,0,0,0">
                <Button Content="Neues Modul" Width="100" Height="35" Margin="0,0,0,10" Click="NeuesModulButton_Click"/>
            </StackPanel>

            <!-- Mittlerer Bereich: Suchleiste und Anzeige -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="20,0,20,0">
                <TextBox x:Name="SearchBox" Height="32" Margin="0,0,0,0" 
                 VerticalContentAlignment="Center" FontSize="14"/>
                <ScrollViewer Height="270">
                    <StackPanel x:Name="SearchResultsPanel">
                        <!-- Hier können dynamisch Suchergebnisse eingefügt werden -->
                        <TextBlock Text="Suchergebnis 1" Margin="0,0,0,5"/>
                        <TextBlock Text="Suchergebnis 2" Margin="0,0,0,5"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>

            <!-- Rechter Bereich: "Öffnen" Button unten -->
            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,10">
                <Button Content="Öffnen" Width="100" Height="35" Click="OeffnenButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
