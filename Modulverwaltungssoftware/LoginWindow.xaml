<Window x:Class="Modulverwaltungssoftware.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modulverwaltungssoftware"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Border Background="#FFF" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >
                <TextBlock Text="Modulverwaltung" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="E-Mail" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="28" Margin="0,0,0,15" VerticalContentAlignment="Center"/>

                <TextBlock Text="Passwort" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="28" Margin="0,0,0,10" VerticalContentAlignment="Center"/>

                <!-- Fehlermeldung Platzhalter -->
                <TextBlock x:Name="ErrorMessage" Foreground="Red" FontSize="12" Margin="0,0,0,15" TextWrapping="Wrap" HorizontalAlignment="Center" Visibility="Collapsed"/>

                <Button x:Name="LoginButton" Content="Login" Height="32" Width="100" HorizontalAlignment="Center" Click="LoginButton_Click" IsDefault="True"/>
                
                <!-- Passwort vergessen Link -->
                <TextBlock Margin="0,10,0,0" HorizontalAlignment="Center">
                    <Hyperlink Click="ForgotPassword_Click" TextDecorations="None">
                        <Run Text="Passwort vergessen?" FontSize="11" Foreground="#0066CC"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
